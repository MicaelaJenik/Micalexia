<!DOCTYPE html>
<html>
  <head>
    <title>Alberto Greco</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="UTF-8">
    <link rel="stylesheet" href="styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= favicon_link_tag asset_path('favicon.png') %>
  </head>

  <body>

    <div class="text-gray-700 p-5">

      <div class="flex border-b pb-4">

        <h1 class="pr-2">
          <%= link_to root_path do %>
            <strong>ALBERTO GRECO</strong>
          <% end %>
        </h1>

        <p>BIOGRAFIA</p>
        <p class="px-2"><%= link_to "ETAPAS", phases_path %></p>
        <p class="px-2"><%= link_to "OBRAS", artworks_path %></p>
        <p class="px-2"><%= link_to "MUESTRAS", shows_path %></p>
        <p class="px-2"><%= link_to "ARTE VIVO", lives_path %></p>
        <p class="px-2"><%= link_to "ESCRITOS", writings_path %></p>

      </div>

      <%= yield %>

    </div>

  </body>
</html>

