<!DOCTYPE html>
<html>
  <head>
    <title>Alberto Greco</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="UTF-8">
    <link rel="stylesheet" href="styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= favicon_link_tag asset_path('favicon.png') %>
  </head>

  <body>

    <div class="text-gray-700 p-5">

      <% unless content_for? :navbar %>
        <div class="flex border-b pb-4 justify-between">

          <h1 class="pr-2">
            <%= link_to root_path do %>
              <strong>ALBERTO GRECO</strong>
            <% end %>
          </h1>

          <div class="flex">
            <p class="px-2"><%= link_to "BIOGRAFIA", bio_path %></p>
            <p class="px-2"><%= link_to "ETAPAS", phases_path %></p>
            <p class="px-2"><%= link_to "OBRAS", artworks_path %></p>
            <p class="px-2"><%= link_to "MUESTRAS", shows_path %></p>
            <p class="px-2"><%= link_to "ARTE VIVO", lives_path %></p>
            <p class="px-2"><%= link_to "ESCRITOS", writings_path %></p>
          </div>

        </div>

      <% end %>

      <%= yield %>

      <div class="pt-5">
        <a href="https://www.instagram.com/vivodito/" class="pr-4"><i class="fab fa-instagram"></i></a>
        <a href="https://twitter.com/vivodito" class="pr-4"><i class="fab fa-twitter"></i></a>
        <a href="https://www.facebook.com/vivoditoarte" class="pr-4"><i class="fab fa-facebook"></i></a>
      </div>

    </div>

  </body>
</html>

